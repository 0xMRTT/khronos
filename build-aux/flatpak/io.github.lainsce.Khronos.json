{
    "app-id" : "io.github.lainsce.Khronos",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.Khronos",
    "rename-icon" : "io.github.lainsce.KhronosDevel",
    "finish-args" : [
    	"--filesystem=xdg-run/gvfsd",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri"
    ],
    "desktop-file-name-suffix" : " (Devel)",
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
    	{
            "name" : "libsass",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/sass/libsass.git"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [
                        "autoreconf -si"
                    ]
                }
            ]
        },
        {
            "name" : "sassc",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/sass/sassc.git"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [
                        "autoreconf -si"
                    ]
                }
            ]
        },
        {
		"name": "pango",
		"buildsystem": "meson",
		"sources": [
			{
			  "type": "git",
			  "url": "https://gitlab.gnome.org/GNOME/pango.git",
			  "commit" : "0c80c6d0b80cce4443e9a18fad2b4bccabaf4325"
			}
		]
	},
	{
		"name": "gtk",
		"buildsystem": "meson",
		"config-opts" : [
		        "-Dexamples=false",
		        "-Dtests=false"
		],
		"sources": [
			{
			  "type": "git",
			  "url": "https://gitlab.gnome.org/GNOME/gtk.git",
			  "commit" : "e0c97e6fccc1f66dabddc21a6e8821347429e157"
			}
		]
	},
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dvapi=true",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "khronos",
            "buildsystem" : "meson",
	        "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path": "../../"
                }
            ]
        }
    ]
}
